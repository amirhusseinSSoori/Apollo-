<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/img_itemRep"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_itemRep_name"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_itemRep"
        app:layout_constraintTop_toTopOf="@+id/img_itemRep" />

    <TextView
        android:id="@+id/txt_itemRep_login"
        android:layout_width="0dp"
        android:layout_height="20dp"

        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_itemRep"
        app:layout_constraintTop_toBottomOf="@+id/txt_itemRep_name" />

    <TextView
        android:id="@+id/txt_itemRep_avetar"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_itemRep"
        app:layout_constraintTop_toBottomOf="@+id/txt_itemRep_login" />

</androidx.constraintlayout.widget.ConstraintLayout>