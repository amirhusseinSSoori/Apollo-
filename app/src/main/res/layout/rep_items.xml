<?xml version="1.0" encoding="utf-8"?>
<com.amirhusseinsoori.apollotask.util.elasticlayout.ElasticLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_duration="@string/durationAnim"
    app:layout_scale="@dimen/scaleAnim">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/HeightContainer_repItem"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_itemRep"
            android:layout_width="@dimen/imgProfileItem"
            android:layout_height="@dimen/imgProfileItem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_itemRep_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/HeightTextAccountF"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_itemRep"
            app:layout_constraintTop_toTopOf="@+id/img_itemRep" />

        <TextView
            android:id="@+id/txt_itemRep_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/HeightTextAccountF"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_itemRep"
            app:layout_constraintTop_toBottomOf="@+id/txt_itemRep_name" />

        <TextView
            android:id="@+id/txt_itemRep_avatar"
            android:layout_width="0dp"
            android:layout_height="@dimen/HeightTextAccountF"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_itemRep"
            app:layout_constraintTop_toBottomOf="@+id/txt_itemRep_login" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.amirhusseinsoori.apollotask.util.elasticlayout.ElasticLayout>
